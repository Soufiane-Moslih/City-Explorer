<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/windowBackground"
    tools:context=".MainActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.App_ListGridSpinnerr">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:title="@string/app_title"
            app:titleTextColor="?attr/colorOnPrimary" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp">

            <TextView
                android:id="@+id/titleText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="8dp"
                android:text="@string/choose_view"
                android:textAppearance="?attr/textAppearanceHeadline5"
                android:textColor="?android:attr/textColorPrimary"
                android:textAlignment="center"
                android:gravity="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/subtitleText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="40dp"
                android:text="@string/explore_cities"
                android:textAppearance="?attr/textAppearanceBody1"
                android:textColor="?android:attr/textColorSecondary"
                android:textAlignment="center"
                android:gravity="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/titleText" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnMenu"
                style="@style/Widget.Material3.Button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:minHeight="72dp"
                android:text="@string/menu"
                android:textSize="16sp"
                android:textStyle="bold"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                app:icon="@drawable/ic_menu"
                app:iconGravity="textStart"
                app:iconPadding="12dp"
                app:cornerRadius="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/subtitleText" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnList"
                style="@style/Widget.Material3.Button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:minHeight="72dp"
                android:text="Liste"
                android:textSize="16sp"
                android:textStyle="bold"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                app:icon="@android:drawable/ic_menu_sort_by_size"
                app:iconGravity="textStart"
                app:iconPadding="12dp"
                app:cornerRadius="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btnMenu" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSpin"
                style="@style/Widget.Material3.Button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:minHeight="72dp"
                android:text="Spinner"
                android:textSize="16sp"
                android:textStyle="bold"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                app:icon="@android:drawable/arrow_down_float"
                app:iconGravity="textStart"
                app:iconPadding="12dp"
                app:cornerRadius="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btnList" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnGrid"
                style="@style/Widget.Material3.Button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:minHeight="72dp"
                android:text="Grid"
                android:textSize="16sp"
                android:textStyle="bold"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                app:icon="@android:drawable/ic_menu_view"
                app:iconGravity="textStart"
                app:iconPadding="12dp"
                app:cornerRadius="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btnSpin" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnimglst"
                style="@style/Widget.Material3.Button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:minHeight="72dp"
                android:text="ImageListe"
                android:textSize="16sp"
                android:textStyle="bold"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                app:icon="@android:drawable/ic_menu_gallery"
                app:iconGravity="textStart"
                app:iconPadding="12dp"
                app:cornerRadius="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btnGrid" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnMaps"
                style="@style/Widget.Material3.Button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:minHeight="72dp"
                android:text="@string/morocco_map"
                android:textSize="16sp"
                android:textStyle="bold"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                app:icon="@android:drawable/ic_menu_mylocation"
                app:iconGravity="textStart"
                app:iconPadding="12dp"
                app:cornerRadius="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btnimglst" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
